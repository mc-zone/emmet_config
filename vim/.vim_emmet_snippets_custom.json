{
	"variables": {
		"lang": "zh-cmn-Hans",
		"locale": "zh-CN",
		"charset": "UTF-8",
		"indentation": "\t",
		"newline": "\n"
	},
	
	"css": {
		"filters": "css",
		"profile": "css",
		"snippets": {
		}
	},
	
	"html": {
		"filters": "html",
		"profile": "html",
		"snippets": {
            "script":"<script type=\"text/javascript\">${1}</script>",
            "script:s":"<script src=\"${1}\" type=\"text/javascript\"></script>",
            "script:src":"<script src=\"${1}\" type=\"text/javascript\"></script>"
		},
		
		"abbreviations": {
		}
	},

	"php": {
		"extends": "html",
		"filters": "php,html,tpl",
		"profile": "php",
		"snippets": {
            "tpvolist":"<volist name=\"${1}\" id=\"${2}\" />${3}</volist>",
            "tpif":"<if condition=\"${1}\">${2}</volist>",
            "disp":"\\$this->display();",
            "pbf":"public function ${1} { \n\t\t${2}\n }",
            "pof":"protected function ${1} { \n\t\t${2}\n }",
            "prf":"private function ${1} { \n\t\t${2}\n }",
            "json_e":"json_encode(${1});",
            "json_d":"json_decode(${1},true);"
        }
    },

    "js": {
		"filters": "js,html",
		"profile": "js",
		"snippets": {
            "json_e":"JSON.stringify(${1});",
            "json_d":"JSON.parse(${1});",
            "require":"require([${1}],function(${2}){\n\t\t${3}\n}"
        }
    },
	
	"xml": {
		"extends": "html",
		"profile": "xml",
		"filters": "html"
	},
	
	"xsl": {
		"extends": "html",
		"profile": "xml",
		"filters": "html, xsl",
		"abbreviations": {
		}, 
		"snippets": {
		}
	},
	
	"haml": {
		"filters": "haml",
		"extends": "html",
		"profile": "xml"
	},

	"jade": {
		"filters": "jade",
		"extends": "html",
		"profile": "xml"
	},

	"slim": {
		"filters": "slim",
		"extends": "html",
		"profile": "xml"
	},
	
	"scss": {
		"extends": "css"
	},
	
	"sass": {
		"extends": "css"
	},
	
	"less": {
		"extends": "css"
	},
	
	"stylus": {
		"extends": "css"
	},

	"styl": {
		"extends": "stylus"
	}
}
